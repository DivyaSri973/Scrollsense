{
  "manifest_version": 3,
  "name": "ScrollSense",
  "version": "1.0.0",
  "description": "Social media time management with AI-powered supportive nudges",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://www.linkedin.com/*",
    "https://www.reddit.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*",
        "https://www.linkedin.com/*",
        "https://www.reddit.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
